    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                "lengthChange": false
            });
        });
        $('#search').keyup(function () {
            var table = $('.tablesort').DataTable();
            table.search($(this).val()).draw();
        });

        const elems = document.querySelectorAll('.datepicker_input');
        for (const elem of elems) {
            const datepicker = new Datepicker(elem, {
                language: 'es',
                format: 'dd/mm/yyyy',
                todayHighlight: true,
            });
            datepicker.element.addEventListener('changeDate', function (data) {
                var table = $('.tablesort').DataTable();
            table.search(document.getElementById("searchdate").value).draw();
            });
        }
    </script>

