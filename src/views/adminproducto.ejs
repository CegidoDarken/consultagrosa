<%- include("partials/_headerpanel") %>
<script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
<link href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css"  rel="stylesheet" type="text/css">
    <div class="container-fluid d-flex flex-column pt-3">
        <div class="row">
            <div class="col-12">
                <div class="input-group rounded shadow">
                    <div class="form-floating ">
                        <input type="email" class="tablesearch-input form-control" id="search" placeholder="Buscar"
                            data-tablesearch-table="#datatable">
                        <label for="search">Buscar</label>
                    </div>
                    <span class="input-group-text border-0" id="search-addon">
                        <i class="fas fa-search">
                            <svg class="icon m-2" width="20" height="20" fill="currentColor">
                                <use xlink:href="/icons/bootstrap-icons.svg#search" />
                            </svg>
                        </i>
                    </span>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-1 align-self-center">
                <button type="button" class="btn btn-primary text-uppercase">
                    Nuevo</button>
            </div>
            <div class="col-1 align-self-center">
                <button type="button" class="btn btn-primary text-uppercase">
                    Actualizar</button>
            </div>
        </div>
        <br>
        <table class="table table-hover text-center fl-table shadow tablesort" id="datatable">
            <thead>
                <tr class="text-light text-center" style="background-color: #146c45;">
                    <th>IMAGEN</th>
                    <th>CODIGO</th>
                    <th>NOMBRE</th>
                    <th>CATEGORIA</th>
                    <th>TAG RFID</th>
                    <th>DESCRIPCIÓN</th>
                    <th>MEDIDA</th>
                    <th>PRECIO</th>
                    <th>EDITAR</th>
                    <th>ELIMINAR</th>
                </tr>
            </thead>
            <tbody>
                <% if (productos) { %>
                    <% productos.forEach(row=> { %>
                        <tr>
                            <td><img src="<%= row.img %>" width="30" alt=""></td>
                            <td>
                                <%= row.codigo %>
                            </td>
                            <td>
                                <%= row.nombre %>
                            </td>
                            <td>
                                <%= row.categoria %>
                            </td>
                            <td>
                                <% if (row.tag) { %><a class="link" href="/escanearproducto">
                                        <%= row.tag %>
                                    </a>
                                    <% } else { %>Ninguno<% } %>
                            </td>
                            <td
                                style="max-width: 300px;text-overflow: ellipsis !important;overflow: hidden; word-break: break-all !important;">
                                <% if (row.tag) { %>
                                    <%= row.descripcion %>
                                        <% } else { %>Ninguno<% } %>
                            </td>
                            <td>
                                <%= row.medida %>
                            </td>
                            <td>
                                $<%= row.precio %>
                            </td>
                            <td>
                                <button type="button" class="btn btn-outline-primary btn-sm"
                                    onclick="editar('<%= row.id_producto %>')">
                                    <svg class="icon" width="20" height="20" fill="currentColor">
                                        <use xlink:href="/icons/bootstrap-icons.svg#pencil-fill" />
                                    </svg>
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-outline-danger btn-sm">
                                    <svg class="icon" width="20" height="20" fill="currentColor">
                                        <use xlink:href="/icons/bootstrap-icons.svg#trash3-fill" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                            <% } %>
            </tbody>
        </table>
    </div>
    </body>
    <script>
        async function editar(id) {
            await fetch('/buscarproductoid', {
                method: 'POST',
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ id: id }),
            }).then(response => response.json()).then(async data => {
                Swal.fire({
                    title: 'EDITAR PRODUCTO',
                    icon: 'info',
                    html: `<div class="card mb-3 border-0"><div class="row g-0"><div class="col-md-4"><img src="${data.img || "images/image-not-found.png"}" class="img-fluid rounded-start" alt="..."><input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload"></div><div class="col-md-8"><div class="card-body"><form class="row g-3"><div class="col-md-4"><div class="form-floating mb-3"><input type="text" class="form-control" id="floatingInput" placeholder="Código"value="${data.codigo}"><label for="floatingInput"">Código</label></div></div><div class="col-md-4"><div class="form-floating mb-3"><input type="text" class="form-control" id="floatingInput" placeholder="Nombre" value="${data.nombre}"><label for="floatingInput">Nombre</label></div></div><div class="col-md-4"><div class="form-floating mb-3"><input type="text" class="form-control" id="floatingInput" placeholder="Tag" value="${data.tag || "Ninguno"}"><label for="floatingInput">Tag</label></div></div><div class="col-12"><div class="form-floating"><select class="form-select" id="floatingSelect"aria-label="Floating label select example"><option selected>Open this select menu</option><option value="1">One</option><option value="2">Two</option><option value="3">Three</option></select><label for="floatingSelect">Categoría</label></div></div><div class="col-12"><div class="form-floating"><textarea id="expandable" class="form-control" placeholder="Leave a comment here">${data.descripcion || "Ninguno"}</textarea><label for="floatingTextarea2">Descripción</label></div></div><div class="col-md-6"><div class="form-floating mb-3"><input type="text" class="form-control" id="floatingInput" placeholder="Medida" value="${data.medida}"><label for="floatingInput">Medida</label></div></div><div class="col-md-6"><div class="form-floating mb-3"><input type="text" class="form-control" id="floatingInput" placeholder="Precio" value="${data.precio}"><label for="floatingInput">Precio</label></div></div></form></div></div></div></div>`,
                    showCloseButton: true,
                    showCancelButton: true,
                    showConfirmButton: true,
                    confirmButtonText: 'ACEPTAR',
                    confirmButtonColor: "#198754",
                    cancelButtonText: 'CANCELAR',
                    showConfirmButton: true,
                    width: '800px'
                });
                $('#expandable').on("keypress", function () {
                    $(this).css('height', 'auto');
                    $(this).height($(this).prop('scrollHeight') + 2);
                });
                $('#expandable').css('height', 'auto');
                $('#expandable').height($('#expandable').prop('scrollHeight') + 2);

            });
        }
        $(document).ready(function () {
            $('#datatable').DataTable({
                searching: true,
                info: true,
                paging: true,
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf'
                ],
                "language": {
                    "sEmptyTable": "No hay datos disponibles en la tabla",
                    "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "sInfoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "sInfoFiltered": "(Filtrado de _MAX_ entradas totales)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ",",
                    "sLengthMenu": "Mostrar _MENU_ entradas",
                    "sLoadingRecords": "Cargando...",
                    "sProcessing": "Procesando...",
                    "sSearch": "Buscar:",
                    "sZeroRecords": "No se encontraron resultados",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    },
                    "buttons": {
                        "copy": "Copiar",
                        "colvis": "Visibilidad"
                    }
                }
            });
            $('#search').keyup(function () {
                var table = $('.tablesort').DataTable();
                table.search($(this).val()).draw();
            });
        });

    </script>