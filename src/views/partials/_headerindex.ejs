<button id="ver-carrito-btn" class="btn btn-primary">Ver Carrito</button>

<div class="modal fade" id="carrito-modal" tabindex="-1" aria-labelledby="carrito-modal-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="carrito-modal-label">Carrito de Compras</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="carrito-table" class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody id="carrito-table-body">
                        <!-- Los datos del carrito se generan dinámicamente aquí -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Obtén los datos del carrito desde la base de datos utilizando fetch
    fetch('/obtener_carrito', {
        method: 'POST',
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({ id_usuario: "43" }),
    }).then(function (response) {
        return response.json();
    })
        .then(function (data) {
            console.log(data);
            if (data.data !== null) {
                carritoHtml = "";
                data.data.forEach(function (item) {
                    console.log(item);
                    carritoHtml += '<tr>';
                    carritoHtml += '<td><img src="' + item.img + '" alt=""></td>';
                    carritoHtml += '<td>' + item.nombre + '</td>';
                    carritoHtml += '<td>' + item.precio + '</td>';
                    carritoHtml += '<td>' + item.cantidad + '</td>';
                    carritoHtml += '<td>' + item.total + '</td>';
                    carritoHtml += '</tr>';
                    document.getElementById('carrito-table-body').innerHTML = carritoHtml;
                });


            }
        })
        .catch(function (error) {
            console.error("Error:", error);
        });

    // Abrir el modal del carrito al hacer clic en el botón "Ver Carrito"
    document.getElementById('ver-carrito-btn').addEventListener('click', function () {
        var carritoModal = new bootstrap.Modal(document.getElementById('carrito-modal'));
        carritoModal.show();
    });


    function showpasswordLogin() {
        var icon = document.getElementById('icon-use');
        var password = document.getElementById("password");
        if (password.type === "password") {
            password.type = "text";
        } else {
            password.type = "password";
        }
    }
    var provinciasSelect = document.getElementById("provincias");

    fetch("/obtener_provincias", {
        method: "POST"
    })
        .then(function (response) {
            return response.json();
        })
        .then(function (data) {
            if (data.data !== null) {
                data.data.forEach(function (provincia) {
                    var option = document.createElement("option");
                    option.value = provincia.id_provincia;
                    option.text = provincia.provincia;
                    provinciasSelect.appendChild(option);
                });
            }
        })
        .catch(function (error) {
            console.error("Error:", error);
        });
    var ciudadesSelect = document.getElementById("ciudades");
    provinciasSelect.addEventListener("change", function () {
        var provinciaId = this.value;
        ciudadesSelect.innerHTML = "";
        fetch("/obtener_ciudades", {
            method: "POST",
            body: JSON.stringify({ provinciaId: provinciaId }),
            headers: {
                "Content-Type": "application/json"
            }
        })
            .then(function (response) {
                return response.json();
            })
            .then(function (data) {
                if (data.data !== null) {
                    ciudadesSelect.innerHTML = "<option value='' selected disabled>Selecciona una opción</option>";
                    data.data.forEach(function (ciudad) {
                        var option = document.createElement("option");
                        option.value = ciudad.id_ciudad;
                        option.text = ciudad.ciudad;
                        ciudadesSelect.appendChild(option);
                    });
                }
            })
            .catch(function (error) {
                console.error("Error:", error);
            });
    });
    document.getElementById("loginForm").addEventListener('submit', function (event) {
        event.preventDefault();
        var formData = new FormData();
        formData.append('usuario', document.getElementById('usuario').value);
        formData.append('password', document.getElementById('password').value);
        fetch('/validar_cliente', {
            method: 'POST',
            body: formData
        }).then(res => res.json())
            .then(element => {
                $('.modal').modal('hide');
                Swal.fire({
                    toast: true,
                    position: 'bottom-end',
                    icon: element.type,
                    title: element.message,
                    showConfirmButton: false,
                    timerProgressBar: true,
                    timer: 3000
                }).then((result) => {
                    if (element.type === "success") {
                        location.reload()
                    }
                });
            });
    });

    document.getElementById("registrarForm").addEventListener('submit', function (event) {
        event.preventDefault();
        event.preventDefault();
        var formData = new FormData();
        formData.append('nombre', document.getElementById('nombre').value);
        formData.append('usuario', document.getElementById('usuario-nuevo').value);
        formData.append('identificacion', document.getElementById('identificacion').value);
        formData.append('telefono', document.getElementById('telefono').value);
        formData.append('email', document.getElementById('email').value);
        formData.append('id_ciudad', document.getElementById('ciudades').value);
        formData.append('direccion', document.getElementById('direccion').value);
        formData.append('password', document.getElementById('password-nuevo').value);
        formData.append('password-confirm', document.getElementById('password-confirm').value);
        fetch('/registrar_cliente', {
            method: 'POST',
            body: formData
        }).then(res => res.json())
            .then(element => {
                console.log(element);
                if (element.message) {
                    location.reload()
                } else {
                    Swal.fire({
                        toast: true,
                        position: 'bottom-end',
                        icon: 'error',
                        title: element.error,
                        showConfirmButton: false,
                        timerProgressBar: true,
                        timer: 3000
                    });
                }
            });
    });

</script>