    aria-hidden="true">
    <div class="modal-dialog">
        <form id="recuperarForm" class="needs-validation" novalidate>
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Recuperación de contraseña</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="correo" name="correo" placeholder=" " required>
                        <label style="color: #59ab6e;" for="correo"><i class="bi bi-envelope"></i> Correo <font
