<script>
    document.getElementById("recuperarForm").addEventListener('submit', async function (event) {
        event.preventDefault();
        var formData = new FormData(event.target);
        fetch('/recuperar', {
            method: 'POST',
            body: formData
        }).then(res => res.json())
            .then(element => {
                Swal.fire({
                    toast: true,
                    position: 'bottom-end',
                    icon: element.type,
                    text: element.message,
                    showConfirmButton: false,
                    timerProgressBar: true,
                    timer: 3000
                });

                if (element.type === "success") {
                    $("#recuperarForm")[0].reset()
                }
            });
    });
    async function obtener_cantidad_carrito() {
        await fetch("/obtener_cantidad_carrito", {
            method: "POST",
            body: JSON.stringify({ id_usuario: "<%= (credentials)?credentials.id_usuario:null %>" }),
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(function (response) {
                return response.json();
            })
            .then(function (data) {
                if (data.data !== null) {
                    if (data.data[0].cantidad != 0) {
                        $("#cantidad-carrito").text(data.data[0].cantidad);
                    } else {
                        $("#cantidad-carrito").text("");
                    }
                }
            })
            .catch(function (error) {
                console.error("Error:", error);
            });
    }
    var totalConIva = 0;
    var pedidos = [];

    const carrito = $('#carrito-table').dataTable({
        ajax: {
            url: "/obtener_carrito",
            type: "POST",
            data: {
                id_usuario: "<%= (credentials)?credentials.id_usuario:null %>",
            }
        },
        drawCallback: async function (settings, json) {
            $('#vaciar').prop('disabled', true);
            $('#pedido').prop('disabled', true);
            var iva = 0.12;
            var api = this.api();
            var totalGeneral = await api.column(6).data().reduce(function (a, b) {
                return a + b;
            }, 0);
            var montoIva = totalGeneral * iva;
            totalConIva = totalGeneral + montoIva;
            $("#subtotal").text("$" + totalGeneral.toFixed(2));
            $("#iva").text("$" + montoIva.toFixed(2));
            $("#total").text("$" + totalConIva.toFixed(2));
            if (totalConIva != 0) {
                $('#vaciar').prop('disabled', false);
                $('#pedido').prop('disabled', false);
            }
        },
        searching: false,
        bLengthChange: false,
        info: false,
        paging: false,
        columns: [
            { data: "id_carrito" },
            { data: "id_producto" },
            { data: "img" },
            { data: "nombre", defaultContent: "-" },
            { data: "precio", defaultContent: "-" },
            { data: "cantidad", defaultContent: "-" },
            { data: "total", defaultContent: "-" },
        ],
        columnDefs: [
            {
                targets: "_all",
                className: "text-center",
            },
            {
                targets: 0,
                visible: false,
            },
            {
                targets: 1,
                visible: false,
            },
            {
                targets: 2,
                render: function (data, type, row, meta) {
                    return `<img src="${row.img ?? '/img/no-image-icon.png'}" style=" width: 100%;height: 80px;object-fit: contain;object-position: center;">`;
                }
            },
            {
                targets: 3,
                render: function (data, type, row, meta) {
                    return `<a href="/detalleproducto?producto=${row.id_producto}">${row.nombre}</a>`;
                }
            },
            {
                targets: 4,
                render: function (data, type, row, meta) {
                    return `$${row.precio}`;
                }
            },
            {
                targets: 5,
                render: function (data, type, row, meta) {
                    pedidos = row;
                    return `
          <div class="quantity-control input-group" >
            <button class="btn btn-primary btn-sm" onclick="agregar_carrito(${row.id_producto},${row.precio}, -1)" ${row.cantidad === 1 ? "disabled" : ""}>-</button>
            <input type="number" class="input form-control text-center" value="${row.cantidad}"  min="1" readonly />
            <button class="btn btn-primary btn-sm" onclick="agregar_carrito(${row.id_producto},${row.precio}, 1)">+</button>
          </div>
        `;
                }
            },
            {
                targets: 6,
                render: function (data, type, row, meta) {
                    total += row.total;
                    return `$${row.total}`;
                }
            },
            {
                targets: 7,
                render: function (data, type, row, meta) {
                    return `<button class="btn btn-sm btn-danger" onclick="eliminar_carrito(${row.id_carrito})"><i class="bi bi-trash-fill"></i></button>`;
                }
            }
        ],
        "language": {
            "sEmptyTable": "No hay datos disponibles en la tabla",
            "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
            "sInfoEmpty": "Mostrando 0 a 0 de 0 entradas",
            "sInfoFiltered": "(Filtrado de _MAX_ entradas totales)",
            "sInfoPostFix": "",
            "sInfoThousands": ",",
            "sLengthMenu": "Mostrar _MENU_ entradas",
            "sLoadingRecords": "Cargando...",
            "sProcessing": "Procesando...",
            "sSearch": "Buscar:",
            "sZeroRecords": "No se encontraron resultados",
            "oPaginate": {
                "sFirst": "Primero",
                "sLast": "Último",
                "sNext": "Siguiente",
                "sPrevious": "Anterior"
            },
            "oAria": {
                "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                "sSortDescending": ": Activar para ordenar la columna de manera descendente"
            },
            "buttons": {
                "copy": "Copiar",
                "colvis": "Visibilidad"
            }
        }
    });

    $(document).on('click', '.btn-minus', function () {
        var row = $(this).data('row');
        var inputElement = $(`.input[data-row="${row}"]`);
        var currentValue = parseInt(inputElement.val());
        if (currentValue > 1) {
            inputElement.val(currentValue - 1);
        }
    });

    $(document).on('click', '.btn-plus', function () {
        var row = $(this).data('row');
        var inputElement = $(`.input[data-row="${row}"]`);
        var currentValue = parseInt(inputElement.val());
        inputElement.val(currentValue + 1);
    });


    function eliminar_carrito(id_carrito) {
        fetch("delete_carrito", {
            method: 'POST',
            body: JSON.stringify({ id_carrito: id_carrito }),
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => response.json()).then(async data => {
            $('#vaciar').prop('disabled', true);
            $('#pedido').prop('disabled', true);
            Swal.fire({
                toast: true,
                position: 'bottom-end',
                icon: data.type,
                title: data.message,
                showConfirmButton: false,
                timerProgressBar: true,
                timer: 3000
            });
            await obtener_cantidad_carrito();
            carrito.api().ajax.reload();
        }).catch(error => {
            console.error(error);
        });
    }

    function vaciar_carrito() {
        fetch("vaciar_carrito", {
            method: 'POST',
            body: JSON.stringify({ id_usuario: "<%= (credentials)?credentials.id_usuario:null %>" }),
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => response.json()).then(async data => {
            $("#cantidad-carrito").text("");
            $('#vaciar').prop('disabled', true);
            $('#pedido').prop('disabled', true);
            carrito.api().ajax.reload();
        }).catch(error => {
            console.error(error);
        });
    }
    function realizar_pedidos() {
        const rawData = carrito.api().rows().data().toArray();
        const filteredData = rawData.map((item) => {
            const newItem = { ...item };
            delete newItem.img;
            return newItem;
        });

        fetch("realizar_pedidos", {
            method: 'POST',
            body: JSON.stringify({ id_usuario: "<%= (credentials)?credentials.id_usuario:null %>", total: totalConIva, pedidos: filteredData }),
            headers: {
                'Content-Type': 'application/json'
            }
