<div class="modal fade" id="login" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header pb-0 border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
                            aria-selected="true">Iniciar Sesión</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile"
                            aria-selected="false">Registrate</button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                        aria-labelledby="pills-home-tab" tabindex="0">
                        <div class="card border-0">
                            <div class="card-body">
                                <form id="loginForm">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="usuario" placeholder=" " required>
                                        <label style="color: #59ab6e;" for="usuario"><i class="bi bi-person"></i>
                                            Usuario</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" id="password" placeholder=" "
                                            required>
                                        <label style="color: #59ab6e;" for="password"><i class="bi bi-key"></i>
                                            Contraseña</label>
                                    </div>
                                    <div class="form-check form-switch mb-3 ms-2">
                                        <input class="form-check-input" type="checkbox" role="switch"
                                            id="flexSwitchCheckChecked" onchange="showpasswordLogin()">
                                        <label class="form-check-label" for="flexSwitchCheckChecked">Mostrar
                                            contraseña</label>
                                    </div>
                                    <div class="d-grid mx-auto"><button class="btn btn-primary" type="submit">Iniciar
                                            Sesión</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab"
                        tabindex="0">
                        <form id="registrarForm">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="nombre" placeholder=" " required>
                                <label style="color: #59ab6e;" for="nombre"><i class="bi bi-person"></i> Nombre</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="usuario-nuevo" placeholder=" " required>
                                <label style="color: #59ab6e;" for="usuario-nuevo"><i class="bi bi-person"></i>
                                    Usuario</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="identificacion" placeholder=" " required>
                                <label style="color: #59ab6e;" for="identificacion"><i class="bi bi-person-vcard"></i>
                                    Cédula/RUC</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="telefono" placeholder=" " required>
                                <label style="color: #59ab6e;" for="telefono"><i class="bi bi-telephone"></i>
                                    Teléfono</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="email" placeholder=" " required>
                                <label style="color: #59ab6e;" for="email"><i class="bi bi-envelope"></i> Email</label>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="provincias" required>
                                    <option value="" selected disabled>Selecciona una opción</option>
                                </select>
                                <label style="color: #59ab6e;" for="provincias">Provincias</label>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="ciudades" required>
                                    <option value="" selected disabled>Selecciona una opción</option>
                                </select>
                                <label style="color: #59ab6e;" for="ciudades">Ciudades</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="direccion" placeholder=" " required>
                                <label style="color: #59ab6e;" for="direccion"><i class="bi bi-signpost-2"></i>
                                    Dirección</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="password-nuevo" placeholder=" "
                                    required>
                                <label style="color: #59ab6e;" for="password-nuevo"><i class="bi bi-key"></i>
                                    Contraseña</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="password-confirm" placeholder=" "
                                    required>
                                <label style="color: #59ab6e;" for="password-confirm"><i class="bi bi-key"></i> Repita
                                    su contraseña</label>
                            </div>
                            <div class="d-grid mx-auto">
                                <button class="btn btn-primary" type="submit">Registrarme</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
