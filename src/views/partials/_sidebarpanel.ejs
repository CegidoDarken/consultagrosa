<script>
    fetch("/count_abastecimiento", {
        method: "POST"
    })
        .then(function (response) {
            return response.json();
        })
        .then(function (data) {
            if (data.data !== null) {
                if (data.data.cantidad >= 100) {
                    $("#abas").text("+99");
                } else {
                    $("#abas").text(data.data.cantidad);
                }
            }
        })
        .catch(function (error) {
            console.error("Error:", error);
        }); 
</script>