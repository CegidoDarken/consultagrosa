<style>
    body {
        background-image: linear-gradient(rgba(18, 42, 66, .65), rgba(18, 42, 66, .65)), url('/img/agricultura.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<body>

    <main>
        <div class="container">
            <section
                class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center pt-4">
                                        <a href="/admin" class="logo d-flex align-items-center w-auto">
                                            <img src="/img/logo.png" alt="">
                                            <span class="d-none d-lg-block text-uppercase">Consultagro S.A</span>
                                        </a>
                                    </div>
                                    <div class="pt-4 pb-2 text-center">
                                        <i class="bi bi-check-circle text-success" style="font-size: 100px;"></i>
                                        <h5 class="card-title text-center pb-0 fs-4">Cuenta validada exitosamente</h5>
                                    </div>
                                    <div class="col-12">
                                        <a class="btn btn-primary w-100" href="/">Ir al inicio</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>
    <script src="/js/sweetalert2.min.js"></script>
    <script>
        function showpassword() {
            var password = document.getElementById("contrasena");
            if (password.type === "password") {
                password.type = "text";
            } else {
                password.type = "password";
            }
        }
        document.getElementById("administradorForm").addEventListener('submit', function (event) {
            event.preventDefault();
            var formData = new FormData(event.target);
            fetch('/validar_administrador', {
                method: 'POST',
                body: formData
            }).then(res => res.json())
                .then(element => {
                    if (element.message) {
                        location.replace('/panel');
                    } else {
                        Swal.fire({
                            toast: true,
                            position: 'bottom-end',
                            icon: 'error',
                            title: element.error,
                            showConfirmButton: false,
                            timerProgressBar: true,
                            timer: 3000
                        });

                    }
                });
        });

        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
</body>

</html>